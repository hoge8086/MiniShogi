<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:utils="clr-namespace:MiniShogiMobile.Utils"
             xmlns:ctrl="clr-namespace:MiniShogiMobile.Controls"
             xmlns:ffi="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             x:Class="MiniShogiMobile.Controls.PlayerView"
             x:Name="self">
    <ContentView.Resources>
        <utils:IsNotNullConverter x:Key="isNotNullConverter"/>
    </ContentView.Resources>
  <ContentView.Content>
        <!--プレイヤーアイコン-->
        <Frame BackgroundColor="{Binding Path=Color, Source={x:Reference self}}"
               CornerRadius="{Binding Path=Height, Source={x:Reference self}, Converter={StaticResource MathExpressionConverter}, ConverterParameter='floor(x * 0.5)'}"
               Padding="0">
            <ffi:CachedImage Source="{Binding Path=Source, Source={x:Reference self}, Converter={utils:ImageSourceConverter}}"
                   VerticalOptions="FillAndExpand"
                   HorizontalOptions="FillAndExpand">
            </ffi:CachedImage>
        </Frame>
  </ContentView.Content>
</ContentView>