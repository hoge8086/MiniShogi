<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniShogiMobile.Controls.SquareCell2DGridControl"
             x:Name="self"
             HorizontalOptions="FillAndExpand"
             VerticalOptions="FillAndExpand"
             SizeChanged="self_SizeChanged">
    <ContentView.Content>
        <!--行-->
        <!--自身のサイズ変更時にセルのサイズを調整する-->
        <StackLayout x:Name="board" Spacing="0" HorizontalOptions="Center" VerticalOptions="Center"
            SizeChanged="self_SizeChanged">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <!--列-->
                    <!--セルのデータテンプレートを自身のコントロールのテンプレートにバインディングする-->
                    <!--アイテム追加時にセルのサイズを調整する-->
                    <!--※ルートのコントロールがFillAndExpandなのでアイテムを追加してもルートのコントロールのサイズが変わらないため-->
                    <StackLayout BindableLayout.ItemsSource="{Binding}"
                                 HorizontalOptions="FillAndExpand"
                                 VerticalOptions="FillAndExpand"
                                 Orientation="Horizontal"
                                 Spacing="0"
                                 BindableLayout.ItemTemplate="{Binding Path=ItemTemplate, Source={x:Reference self}}"/>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </StackLayout>
    </ContentView.Content>
</ContentView>