<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniShogiMobile.Controls.KomadaiView"
             x:Name="self">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Frame BackgroundColor="{StaticResource BoardBorderColor}"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                Padding="0"
                CornerRadius="0">
                <Frame BackgroundColor="{StaticResource BoardBackgroundColor}"
                    Margin="1"
                    Padding="0"
                    CornerRadius="0"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand">
                    <ContentPresenter/>
                </Frame>
            </Frame>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>