<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniShogiMobile.Controls.OkCancelView"
             x:Name="self">
  <ContentView.Content>
    <StackLayout Spacing="0">
        <BoxView Style="{StaticResource HorizontalLine}" BackgroundColor="{StaticResource AppControlDarkColor2}"/>
        <Grid ColumnDefinitions="*,Auto,*">
            <Button Grid.Column="0" Command="{Binding CancelCommand, Source={x:Reference self}}" Text="キャンセル" Style="{StaticResource PopupPageButtonStyle}" />
            <BoxView Grid.Column="1" Style="{StaticResource VerticalLine}" BackgroundColor="{StaticResource AppControlDarkColor2}"/>
            <Button Grid.Column="2" Command="{Binding OkCommand, Source={x:Reference self}}" Text="OK" Style="{StaticResource PopupPageButtonStyle}" />
        </Grid>
    </StackLayout>
  </ContentView.Content>
</ContentView>