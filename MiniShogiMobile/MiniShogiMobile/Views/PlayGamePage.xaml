<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             xmlns:ctrl="clr-namespace:MiniShogiMobile.Controls"
             xmlns:views="clr-namespace:MiniShogiMobile.Views"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="MiniShogiMobile.Views.PlayGamePage"
             Title="{Binding Title}">
    <Grid RowDefinitions="*,10*,3*" ColumnDefinitions="*,20*,*">
        <Frame BackgroundColor="Chocolate"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"
            Grid.Column="1"
            Padding="0"
            CornerRadius="0"
            Grid.Row="0">
            <Frame BackgroundColor="SandyBrown"
                Margin="1"
                Padding="0"
                CornerRadius="0"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand">
                <StackLayout 
                    Orientation="Horizontal"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="CenterAndExpand"
                    Spacing="0"
                    BindableLayout.ItemsSource="{Binding Game.HandsOfPlayer2.Hands}">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <ctrl:HandKomaView Number="{Binding Num}" DisplayName="{Binding Name}"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="FillAndExpand"/>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>
            </Frame>
        </Frame>
            <!--
        <BoxView BackgroundColor="AliceBlue"
            Grid.Column="1"
            Grid.Row="1"/>
        -->
        <ctrl:SquareCell2DGridControl
            x:Name="board"
            Grid.Column="1"
            Grid.Row="1"
            ItemsSource="{Binding Game.Board.Cells}">
            <ctrl:SquareCell2DGridControl.ItemTemplate>
                <ControlTemplate>
                    <views:CellView BackgroundColor="SandyBrown"
                        BindingContext="{TemplateBinding BindingContext}"
                        ClickCommand="{Binding Path=BindingContext.MoveCommand, Source={x:Reference board}}"
                        IsMarked="{Binding CanMove.Value}">
                        <views:CellView.Triggers>
                            <DataTrigger TargetType="views:CellView" Binding="{Binding IsSelected.Value}" Value="True">
                                <Setter Property="BackgroundColor" Value="DarkOrange"/>
                            </DataTrigger>
                        </views:CellView.Triggers>
                    </views:CellView>
                </ControlTemplate>
            </ctrl:SquareCell2DGridControl.ItemTemplate>
        </ctrl:SquareCell2DGridControl>
    </Grid>
</ContentPage>