<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             xmlns:ctrl="clr-namespace:MiniShogiMobile.Controls"
             xmlns:views="clr-namespace:MiniShogiMobile.Views"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="MiniShogiMobile.Views.PlayGamePage"
             Title="{Binding Title}">
    <Grid RowDefinitions="*,8*,*,2*" ColumnDefinitions="*,20*,*">
        <StackLayout Orientation="Horizontal"
            Grid.Column="1"
            Grid.Row="0">
            <ctrl:KomadaiView
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                Rotation="180"
                ItemsSource="{Binding Game.HandsOfPlayer2.Hands}">
                <ctrl:KomadaiView.ItemTemplate>
                    <DataTemplate>
                        <Grid WidthRequest="{Binding Source={RelativeSource Self}, Path=Height}">
                            <ctrl:HandKomaView Number="{Binding Num.Value}" DisplayName="{Binding Name}" IsHighlight="{Binding IsSelected.Value}"/>
                            <Button CommandParameter="{Binding}"
                                Command="{Binding Path=BindingContext.MoveCommand, Source={x:Reference board}}"
                                BackgroundColor="Transparent">
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ctrl:KomadaiView.ItemTemplate>
            </ctrl:KomadaiView>
            <ctrl:PlayerView Text="{Binding Game.HandsOfPlayer2.Name.Value}" SubText="{Binding Game.HandsOfPlayer2.TurnTypeName.Value}" WidthRequest="{Binding Source={RelativeSource Self}, Path=Height}" BackgroundColor="Red"/>
        </StackLayout>
        <ctrl:SquareCell2DGridControl
            x:Name="board"
            Grid.Column="1"
            Grid.Row="1"
            ItemsSource="{Binding Game.Board.Cells}">
            <ctrl:SquareCell2DGridControl.ItemTemplate>
                <ControlTemplate>
                    <views:CellView
                        BindingContext="{TemplateBinding BindingContext}"
                        ClickCommand="{Binding Path=BindingContext.MoveCommand, Source={x:Reference board}}"
                        IsMarked="{Binding CanMove.Value}"
                        IsHighlight="{Binding IsSelected.Value}">
                    </views:CellView>
                </ControlTemplate>
            </ctrl:SquareCell2DGridControl.ItemTemplate>
        </ctrl:SquareCell2DGridControl>
        <StackLayout Orientation="Horizontal"
            Grid.Column="1"
            Grid.Row="2">
            <ctrl:PlayerView Text="{Binding Game.HandsOfPlayer1.Name.Value}" SubText="{Binding Game.HandsOfPlayer1.TurnTypeName.Value}" WidthRequest="{Binding Source={RelativeSource Self}, Path=Height}" BackgroundColor="Blue"/>
            <ctrl:KomadaiView
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                ItemsSource="{Binding Game.HandsOfPlayer1.Hands}">
                <ctrl:KomadaiView.ItemTemplate>
                    <DataTemplate>
                        <Grid WidthRequest="{Binding Source={RelativeSource Self}, Path=Height}">
                            <ctrl:HandKomaView Number="{Binding Num.Value}" DisplayName="{Binding Name}" IsHighlight="{Binding IsSelected.Value}"/>
                            <Button CommandParameter="{Binding}"
                                Command="{Binding Path=BindingContext.MoveCommand, Source={x:Reference board}}"
                                BackgroundColor="Transparent">
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ctrl:KomadaiView.ItemTemplate>
            </ctrl:KomadaiView>
        </StackLayout>
    </Grid>
</ContentPage>