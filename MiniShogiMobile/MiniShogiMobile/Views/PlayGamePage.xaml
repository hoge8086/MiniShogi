<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             xmlns:ctrl="clr-namespace:MiniShogiMobile.Controls"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="MiniShogiMobile.Views.PlayGamePage"
             Title="{Binding Title}">
    <StackLayout>
        <Label  Text="Playing"/>
        <ctrl:SquareCell2DGridControl ItemsSource="{Binding Board}" HorizontalOptions="Center">
            <ctrl:SquareCell2DGridControl.ItemTemplate>
                <DataTemplate>
                    <Button Text="{Binding Koma.Value.Name}" BorderColor="Black" FontSize="Large"/>
                </DataTemplate>
            </ctrl:SquareCell2DGridControl.ItemTemplate>
        </ctrl:SquareCell2DGridControl>
    </StackLayout>
</ContentPage>