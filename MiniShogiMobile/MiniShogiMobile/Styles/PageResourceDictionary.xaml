<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiniShogiMobile.Styles.PageResourceDictionary">
    <!--ページ専用スタイル-->
    <!--ボタン-->
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="{StaticResource AppControlDarkColor2}"/>
            <Setter Property="TextColor" Value="{StaticResource AppFontLightColor}"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="HeightRequest" Value="40"/>
            <Setter Property="BorderWidth" Value="0"/>
            <Setter Property="FontSize" Value="Large"/>
            <Setter Property="FontFamily" Value="AzukiFont"/>
            <!--
            <Setter Property="BorderColor" Value="{StaticResource AppControlDarkColor}"/>
            -->
        </Style>
</ResourceDictionary>